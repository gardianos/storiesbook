<h2 class="header">Stories</h2>
<div class="row">
    {{#each stories}}
    <div class="col s12 m4">
        <div class="card horizontal">
            <div class="card-image">
                {{{editIcon user ../user _id}}}
            </div>
            <div class="card-stacked">
                <div class="card-content">
                    <h5>{{title}}</h5>
                    <p>{{stripTags (truncate body 50)}}</p>
                </div>
                <div class="chip">
                    <img src="{{user.image}}" alt="">
                    <a href="/stories/user/{{user._id}}">{{user.displayName}}</a>
                </div>
                <div class="card-action">
                    <a href="/stories/{{_id}}">Read More</a>
                </div>
            </div>
        </div>
    </div>
    {{else}}
    <li class="collection-item active" No stories to display</li>

        {{/each}}
</div>