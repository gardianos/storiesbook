<h3>ADD STORY</h3>
<div class="row">
    <form action="/stories" method="POST" class="col s12">

        <div class="row">
            <div class="input-field col s12">
                <input placeholder="Write the title of your story" id="title" type="text" name="title" class="validate">
                <label for="title">Title</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
                <select id="status" name="status">
                    <option value="" disabled selected>Choose your option</option>
                    <option value="public">Public</option>
                    <option value="private">Private</option>
                </select>
                <label for="status">Status</label>
            </div>
        </div>

        <div class="row">
            <div class="input-field col s12">
                <textarea id="body" name="body" class="materialize-textarea"></textarea>
                <label for="body">Tell Us Your Story</label>
            </div>
        </div>

        <div class="row">
            <input type="submit" value="Save" class="btn">
            <a href="/dashboard" class="btn orange">Cancel</a>
        </div>

    </form>
</div>